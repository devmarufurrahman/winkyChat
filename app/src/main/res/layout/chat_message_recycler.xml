<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_round"
        android:backgroundTint="@color/chat_color_sender"
        android:layout_marginEnd="80dp"
        android:padding="10dp"
        android:id="@+id/leftChatLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, How are you?"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/leftChatText"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_round"
        android:backgroundTint="@color/chat_color_receiver"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:padding="10dp"
        android:id="@+id/rightChatLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am fine. And you?"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/rightChatText"
            />
    </LinearLayout>

</RelativeLayout>